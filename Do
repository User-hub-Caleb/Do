<body>

    <header>
        <h1>Do</h1>
    </header>

    <div class="input-group">
        <input type="text" id="task-input" placeholder="What needs to be done?" autocomplete="off">
        <button id="add-btn">Add</button>
    </div>

    <ul id="task-list">
        </ul>

    <div class="stats" id="stats">
        0 tasks pending
    </div>

    <script>
        // DOM Elements
        const taskInput = document.getElementById('task-input');
        const addBtn = document.getElementById('add-btn');
        const taskList = document.getElementById('task-list');
        const stats = document.getElementById('stats');

        // State
        let todos = JSON.parse(localStorage.getItem('do-todos')) || [];

        // Initialize
        renderTodos();

        // Event Listeners
        addBtn.addEventListener('click', addTodo);
        
        taskInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') addTodo();
        });

        // Functions
        function addTodo() {
            const text = taskInput.value.trim();
            if (text === '') return;

            const newTodo = {
                id: Date.now(),
                text: text,
                completed: false
            };

            todos.unshift(newTodo); // Add to top
            saveAndRender();
            taskInput.value = '';
            taskInput.focus();
        }

        function toggleTodo(id) {
            todos = todos.map(todo => {
                if (todo.id === id) {
                    return { ...todo, completed: !todo.completed };
                }
                return todo;
            });
            // Optional: Move completed to bottom
            todos.sort((a, b) => a.completed - b.completed);
            saveAndRender();
        }

        function deleteTodo(id) {
            const element = document.getElementById(id);
            // Animate out
            element.style.transform = 'scale(0.9)';
            element.style.opacity = '0';
            
            setTimeout(() => {
                todos = todos.filter(todo => todo.id !== id);
                saveAndRender();
            }, 200);
        }

        function saveAndRender() {
            localStorage.setItem('do-todos', JSON.stringify(todos));
            renderTodos();
        }

        function renderTodos() {
            taskList.innerHTML = '';
            
            todos.forEach(todo => {
                const li = document.createElement('li');
                li.className = `task-item ${todo.completed ? 'completed' : ''}`;
                li.id = todo.id;

                li.innerHTML = `
                    <div class="custom-checkbox" onclick="toggleTodo(${todo.id})"></div>
                    <span class="task-content">${escapeHtml(todo.text)}</span>
                    <button class="delete-btn" onclick="deleteTodo(${todo.id})">Ã—</button>
                `;
                
                taskList.appendChild(li);
            });

            updateStats();
        }

        function updateStats() {
            const pending = todos.filter(t => !t.completed).length;
            stats.innerText = `${pending} task${pending !== 1 ? 's' : ''} pending`;
        }

        // Security helper
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>
